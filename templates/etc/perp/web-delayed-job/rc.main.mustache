#!/usr/bin/env bash
set -e -u

# Redirect stderr to stdout
exec 2>&1

umask "{{umask}}"

if [ "${1}" = "start" ]; then
  echo "starting ${2}..."
  api_umbrella_user="{{user}}"

  run_args=("-e" "rc.env" "-c" "{{_src_root_dir}}/src/api-umbrella/web-app")
  if [ -n "$api_umbrella_user" ]; then
    run_args+=("-u" "$api_umbrella_user")
  fi

  exec runtool ${run_args[@]+"${run_args[@]}"} bundle exec ./bin/delayed_job --pid-dir="{{run_dir}}" run
fi

exit 0
