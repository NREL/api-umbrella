#!/usr/bin/env bash

nodejs_version="16.14.2"
nodejs_hash="e40c6f81bfd078976d85296b5e657be19e06862497741ad82902d0704b34bb1b"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "https://nodejs.org/dist/v$nodejs_version/node-v$nodejs_version-linux-x64.tar.xz" "sha256" "$nodejs_hash"
extract_download "node-v$nodejs_version-linux-x64.tar.xz"

mkdir -p "$DEV_INSTALL_PREFIX"
rsync -a --itemize-changes "node-v$nodejs_version-linux-x64/" "$DEV_INSTALL_PREFIX/"

stamp
